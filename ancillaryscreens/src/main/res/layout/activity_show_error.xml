<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#ffffff"
    tools:context=".screens.error.ErrorActivity">

    <ImageView
        android:id="@+id/error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/crash_image"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.3">

    <TextView
        android:id="@+id/error_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oh_no"
        android:textColor="#CE353535"
        android:textSize="40sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/errorMessage_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unexpected_error_occured"
        android:textSize="17sp"
        android:textColor="#A09F9F"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/error_textView" />

    <Button
        android:id="@+id/restartApp_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/let_s_start_again"
        android:background="@color/appBlue"
        android:layout_below="@id/errorMessage_textView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:layout_marginTop="15dp"/>

    <!--<Button
        android:id="@+id/sendReport_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Send Crash Report"
        android:background="@color/appBlue"
        android:layout_below="@id/restartApp_button"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:layout_marginTop="15dp"/>-->

    </RelativeLayout>
</LinearLayout>
