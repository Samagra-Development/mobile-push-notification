<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FormEntryActivityTheme" parent="BaseAppTheme">
        <item name="android:textDirection" tools:targetApi="17">firstStrong</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Material theme attributes-->


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:scrollbarSize">1.75mm</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:panelBackground">@android:color/white</item>
        <item name="android:textDirection" tools:targetApi="17">locale</item>
        <item name="android:tintMode" tools:targetApi="21">src_in</item>
    </style>

    <!--To Modify the toolbar throughout the app-->
    <style name="ThemeOverlay.AppCompat.ActionBar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <!--<item name="colorControlNormal">@color/amber_500</item>-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="BaseAppTheme.SettingsTheme.Dark" parent="BaseAppTheme">
        <item name="android:textDirection" tools:targetApi="17">locale</item>
        <item name="android:textSize">18sp</item>
        <item name="android:listDivider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>
